CC = gcc
LIBS = -lm
TARGET = My-binaire
OBJ = max.o min.o var.o test.o
DEBUG = no

ifeq ($(DEBUG),yes)
    CFLAGS = -Wall -g   # Mode debug avec les informations de d√©bogage
else
    CFLAGS = -Wall -O2  # Mode release avec optimisations
endif

all: $(TARGET)

%.o: %.c %.h
	$(CC) $(CFLAGS) -c $<

$(TARGET): $(OBJ)
	$(CC) $^ -o $@ $(LIBS)

install: $(TARGET)
	cp $(TARGET) $(HOME)/$(TARGET)

clean:
	rm -f *.o $(TARGET)

